{
  "name": "iracing-radar-overlay",
  "version": "1.0.0",
  "description": "iRacing Proximity Radar Overlay with spotter side bars",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "howler": "^2.2.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/howler": "^2.2.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.iracing.radar.overlay",
    "productName": "iRacing Radar Overlay",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
